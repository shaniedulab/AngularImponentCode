      <div class="form-group">
        <label for="cpassword">Password</label>
        <input type="{{showPass}}" class="form-control">
        <input type="checkbox" (click)="showPassword($event)">Show Password
      </div>
z
showPassword(e){
    // console.log(e.target.checked);
    if(e.target.checked){
      this.showPass='text';
    }else{
      this.showPass='password';
    }
 }
